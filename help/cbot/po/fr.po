"public class MyClass\n"
"{\n"
"\tstatic private int counter = 0; // compteur d'instances\n"
"\tvoid  MyClass( )\n"
"\t{\n"
"\t\tcounter++;  // une nouvelle instance\n"
"\t}\n"
"\tvoid ~MyClass( )\n"
"\t{\n"
"\t\tcounter--;  // une instance en moins\n"
"\t}\n"
"}\n"
"extern void object::Test()\n"
"{\n"
"\t                   // counter == 0\n"
"\tMyClass item1( );  // counter == 1\n"
