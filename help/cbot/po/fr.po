msgid "<c/>retobject ( number );<n/>"
msgstr "<c/>retobject ( rank );<n/>"

#. type: Plain text
#: ../E/retobj.txt:5
#, no-wrap
msgid "Returns the object corresponding to the given number."
msgstr "Retourne un objet d'après son rang."

#. type: \t; header
#: ../E/retobj.txt:7
